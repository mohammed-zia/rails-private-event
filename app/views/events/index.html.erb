<h1>Private Events</h1>

<p>Welcome to Private Events.</p>

<p>Past events:</p>
<div id="past-events">
  <% Event.past.each do |event| %>
    <%= render event %>
    <%= link_to "Learn more", event %>
  <% end %>
</div>

<p>Future events:</p>
<div id="future-events">
  <% Event.future.each do |event| %>
    <%= render event %>
    <%= link_to "Learn more", event %>
  <% end %>
</div>

<% if user_signed_in? %>
  <%= link_to "Create an event", new_event_path, method: :get %>
  <%= link_to "My profile", user_path(@user) %>
  <%= button_to "Log out", destroy_user_session_path, method: :delete %>
<% else %>
  <%= button_to "Log in", new_user_session_path, method: :get %>
<% end %>